<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="maven-project.xsd">
  <pomVersion>3</pomVersion>
  <id>uispec4j</id>
  <name>UISpec4J</name>
  <url>http://www.uispec4j.org</url>
  <currentVersion>1.3</currentVersion>
  <package>org.uispec4j</package>
  <inceptionYear>2004</inceptionYear>
  <organization>
    <name>Design-up</name>
    <url>http://www.design-up.com</url>
  </organization>
  <siteDirectory>${basedir}/publication</siteDirectory>
  <logo>/uispec4j.png</logo>
  <issueTrackingUrl>https://uispec4j.dev.java.net/servlets/ProjectIssues</issueTrackingUrl>
  <shortDescription>Java/Swing GUI testing made simple!</shortDescription>

  <licenses>
    <license>
      <name>Common Public License</name>
      <url>http://www.opensource.org/licenses/cpl.php</url>
      <distribution>manual</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <name>Regis Medina</name>
      <id>rmedina</id>
      <email>regis DOT medina AT design-up DOT com</email>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <name>Boris Gonnot</name>
      <id>gonnot</id>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <name>Pascal Pratmarty</name>
      <id>ppratmarty</id>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <name>Sebastien Crego</name>
      <id>scrego</id>
      <timezone>+1</timezone>
    </developer>
    <developer>
      <name>Sylvain Rousseau</name>
      <id>sroussea</id>
      <timezone>+1</timezone>
    </developer>
  </developers>

  <mailingLists>
    <mailingList>
      <name>UISpec4J discussion group</name>
      <subscribe>uispec4j-subscribe@yahoogroups.com</subscribe>
      <unsubscribe>uispec4j-unsubscribe@yahoogroups.com</unsubscribe>
      <archive>http://groups.yahoo.com/group/uispec4j/</archive>
    </mailingList>
  </mailingLists>
  <dependencies>
    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm</artifactId>
      <version>1.5.2</version>
      <type>jar</type>
      <url>http://asm.objectweb.org</url>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-util</artifactId>
      <version>1.5.2</version>
      <type>jar</type>
      <url>http://asm.objectweb.org</url>
    </dependency>
    <dependency>
      <groupId>asm</groupId>
      <artifactId>asm-attrs</artifactId>
      <version>1.5.1</version>
      <type>jar</type>
      <url>http://asm.objectweb.org</url>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/*TestCase.java</exclude>
      </excludes>
    </unitTest>
  </build>

  <reports>
    <report>maven-license-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-junit-report-plugin</report>
    <report>maven-clover-plugin</report>
  </reports>

</project>
